package views

import (
	"github.com/Francesco99975/authpoc/internal/models"
	"github.com/Francesco99975/authpoc/views/components"
	"github.com/Francesco99975/authpoc/views/layouts"
)

templ Index(site models.Site) {
	@layouts.Base(site) {
		<main class="flex-1 flex items-center justify-center px-4 py-8 md:py-12 lg:py-16">
			@components.AuthForm(site.CSRF)
		</main>
	}
}
